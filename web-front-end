//SCSS : apply style if the parent has(or not) a certain class
.only-mobile-tablet {
    header:not(.mobile-menu-active) & {
        display: none !important;
    }
}

// Remove blur effect on mouse hover - zoom action
-webkit-backface-visibility: hidden;

// Create a arrow-top icon using CSS.
.arrow-up {
    border-bottom: 24px solid black;
    border-left: 24px solid transparent;
    border-right: 24px solid transparent;
    height: 0;
    width: 0;
}

using example:
<div class="arrow-up"></div>
